<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drassist">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_doctor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_doctor_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrAssist"
        android:hardwareAccelerated="true">

    <activity
            android:name=".IdealWeight"
            android:exported="true" />
        <activity
            android:name=".BodyFat"
            android:exported="true" />
        <activity
            android:name=".BloodAlcohol"
            android:exported="true" />
        <activity
            android:name=".BodyMassIndex"
            android:exported="true" />
        <activity
            android:name=".TopicDetails"
            android:exported="true" />
        <activity
            android:name=".VideoActivity"
            android:exported="true" />
        <activity
            android:name=".Topics"
            android:exported="true" />
        <activity
            android:name=".SelfCheck"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>